    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "mysql": "^2.18.1",
    "mysql2": "^2.2.5",
    "node-cron": "^2.0.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.3.5",
    "serve-favicon": "^2.5.0",
    "twilio": "^3.50.0",
    "express-pino-logger": "^4.0.0"
